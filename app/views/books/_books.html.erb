<h2>Books</h2>
<table class="table table-hover ta-inverse">
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th>Comments</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
  <% obj.each do |book| %>
    <tr>
      <td>
        <%= link_to user_path(book.user.id) do %>
          <%= image_tag book.user.get_profile_image(100,100) %>
        <% end %>
      </td>
      <td>
        <%= link_to "#{book.title}",book_path(book) %>
      </td>
      <td>
        <%= book.body %>
      </td>
      <td>
        <%= link_to "#{book.book_comments.count}",book_path(book) %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>