
<%= render 'layouts/search' %>
<p id="notice"></p>
<table class="table">
  <% if @range == "User" %>
  <h2>Users search for "<%= params[:word] %>"</h2>
    <thead>
      <tr>
        <th></th>
        <th>Name</th>
        <th>About</th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= image_tag user.get_profile_image(100,100) %></td>
          <td><%= user.name %></td>
          <td><%= link_to 'Show', user_path(user), class:"btn btn-outline-dark" %></td>
        </tr>
      <% end %>
    </tbody>
  <% else %>
  <h2>Books search for "<%= params[:word] %>"</h2>
    <thead>
      <tr>
        <th></th>
        <th>Title</th>
        <th>Opinion</th>
      </tr>
    </thead>
    <tbody>
      <% @books.each do |book| %>
        <tr>
          <td><%= image_tag book.user.get_profile_image(50,50) %></td>
          <td><%= book.title %></td>
          <td><%= book.body %></td>
        </tr>
      <% end %>
    </tbody>
  <% end %>
</table>
